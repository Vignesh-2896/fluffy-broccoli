extends layout 

block content
    h2(class = "text-center text-italic") Join Club

    if errorMessage
        h6(class = "text-center text-italic text-danger") #{errorMessage}

    div(class = "small-content")
        form(class = "" method = "POST")
            div(class = "form-group row justify-content-center")
                label(for = "clubPassword" class = "col-2 col-form-label text-right") Club Password
                div(class = "col-7")
                    input(type = "password" name = "clubPassword" class = "form-control" required)

            div(class = "form-row justify-content-center")
                div(class = "col-auto")
                    button(type = "Submit" class = "btn btn-primary") Submit   